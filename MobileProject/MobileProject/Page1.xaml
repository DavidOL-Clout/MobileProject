<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileProject.Page1">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Pink">
            <Label Text="Stay Organised"  FontSize="60" VerticalOptions="Start" HorizontalOptions="CenterAndExpand"/>
            <BoxView VerticalOptions="Start" HorizontalOptions="StartAndExpand" Color="Black" HeightRequest="10" WidthRequest="500"/>
            <Button BorderColor="Black" TextColor="White" BackgroundColor="MidnightBlue" Text="Planner"  FontSize="30" 
                CornerRadius="10" Margin="20, 140, 20, 20"
                HeightRequest="50"
                VerticalOptions="Center"
                Clicked="Button_Clicked"
                HorizontalOptions="FillAndExpand"/>

            <Button BorderColor="Black" TextColor="White" BackgroundColor="MidnightBlue" Text="Sleep Calculator"  FontSize="30" 
                CornerRadius="10" Margin="20, 10, 20, 20"
                HeightRequest="50"
                VerticalOptions="Center"
                Clicked="Button_Clicked_SleepCal"  
                HorizontalOptions="FillAndExpand"/>


        </StackLayout>

        
      
    </ContentPage.Content>
</ContentPage>